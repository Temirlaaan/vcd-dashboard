version: '3.8'

services:
  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    container_name: vcd_backend
    restart: unless-stopped
    expose:
      - "8000"
    env_file:
      - ./backend/.env
    networks:
      - vcd_network
    volumes:
      - ./backend/logs:/app/logs
      - ./backend/vcd_history.db:/app/vcd_history.db

  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
    container_name: vcd_frontend
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    depends_on:
      - backend
    networks:
      - vcd_network
    volumes:
      - ./ssl:/etc/nginx/ssl:ro
    environment:
      - DOMAIN=vcd-public-ips.t-cloud.kz

networks:
  vcd_network:
    driver: bridge